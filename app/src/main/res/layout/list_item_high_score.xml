<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_rank"
        android:layout_width="@dimen/activity_high_score_column_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhiteOpaque"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_rank"
        android:layout_toLeftOf="@+id/text_score"
        android:layout_toRightOf="@+id/text_rank"
        android:layout_toStartOf="@id/text_score"
        android:background="@color/colorWhiteOpaque"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_regular" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="@dimen/activity_high_score_column_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorWhiteOpaque"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_regular" />

</RelativeLayout>